        <!-- Comment Section -->
        <div class="new-plane-idea-section">
            <h3>Give Us a New Plane Idea</h3>
            <!-- Comment Form -->
            <form class="new-plane-idea-form" onsubmit="postNewPlaneIdea(event)">
                <input type="text" id="name" name="name" placeholder="Your Name" required />
                <textarea id="newPlaneIdeaInput" name="comment" placeholder="Your New Plane Idea" rows="4" required></textarea>
                <button type="submit">Post New Plane Idea</button>
            </form>
            <!-- Displaying New Plane Ideas -->
            <div class="new-plane-ideas" id="newPlaneIdeas">
                <!-- New Plane Ideas will be dynamically added here -->
            </div>
        </div>
    </div>
    <footer>
        <p>&copy; 2025 ice stars</p>
    </footer>

    <script>
        // Function to handle posting a New Plane Idea
        function postNewPlaneIdea(event) {
            event.preventDefault(); // Prevent form from submitting normally

            // Get the name and comment text from the form
            const name = document.getElementById('name').value;
            const ideaText = document.getElementById('newPlaneIdeaInput').value;

            // Create a new div to hold the comment
            const newPlaneIdeaDiv = document.createElement('div');
            newPlaneIdeaDiv.classList.add('comment');

            // Add the name and comment to the div
            newPlaneIdeaDiv.innerHTML = `<strong>${name}:</strong><p>${ideaText}</p>`;

            // Append the new comment to the comments section
            document.getElementById('newPlaneIdeas').appendChild(newPlaneIdeaDiv);

            // Clear the form fields after submitting
            document.getElementById('name').value = '';
            document.getElementById('newPlaneIdeaInput').value = '';
        }
    </script>
